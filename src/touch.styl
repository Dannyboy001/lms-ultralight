.ui.list.touchlist>.touchlist-item,
.ui.list.touchlist>.touchlist-item
  padding: 0.4em 0
  border-radius: 0
  &:hover
    background-color: inherit
  &.selected
    background: rgba(0,0,0,.03)
    color: rgba(0,0,0,.8)
  &.active:hover,
  &.selected.active
    background: rgba(0,0,0,.05)
    color: rgba(0,0,0,.95)
  &.dropBefore
    box-shadow: inset 0 4px 3px -5px black
  &.dropAfter
    box-shadow: inset 0 -4px 3px -5px black
  .drag-handle
    touch-action: none
