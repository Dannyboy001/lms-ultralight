.mainmenu
  .power-bar
    &.ui.borderless.menu
      z-index: 200
      border: none
      box-shadow: 0 0 4px #bbb

    .ui.selection.dropdown
      border: none
      .menu
        max-height: none

    .player-bar
      border: none
      box-shadow: none

    .song-time.progress-indicator
      top: calc(3.4em - 3px)

  .sidebar
    border-right: 1px solid #D6D6D6

  .player-bar
    .track-info
      border: none
      box-shadow: none
      overflow: hidden

      .tags
        padding: 0 0.5em

      .item:hover
        background-color: inherit

  .menu-items.ui.borderless.menu
    padding-top: 3.4em
    margin: 0
    border: none
    border-radius: 0
    box-shadow: none
    .nav
      border: none
      box-shadow: none
      margin: 0
    .browse-sections
      padding-top: 0.6em
      border: none
      box-shadow: none

    .playlist-buttons .ui.button
      padding-left: 0.6em
      padding-right: 0.6em

    .ui.list.touchlist .touchlist-item
      .playlist-controls
        position: absolute
        z-index: 5
        right: 0
        top: 0
        display: none
      &:hover
        .playlist-controls
          display: block
      &.selected
        .playlist-controls
          display: block
      // show controls on first selected item only
      // super slick trick: https://stackoverflow.com/a/8539107/10840
      &.selected ~ .selected
        .playlist-controls
          display: none

    .ui.items.media-info
      margin-top: 1em
      > .item > .content > .header
        margin-top: 0

  .messages
    position: fixed
    top: 3.7em
    margin: 0.5em
    width: calc(100% - 1em)
    z-index: 210

  .progress-indicator
    position: fixed
    height: 2px
    background-color: blue

  .mainview.ui.grid
    /* HACK adjust to fixed top/bottom menu - Semantic UI bug? */
    margin: 0
    padding-top: 3.4em !important

    .fixed-top
      position: fixed
      top: calc(3.4em - 1px)
      width: 100%
      padding-top: 1em
      background-color: white
      z-index: 50
