.playlist.ui.selection.list>.item,
.playlist.ui.selection.list.list>.item
  padding: 0.4em 0
  border-radius: 0
  &:hover
    background-color: inherit
  &.selected
    background: rgba(0,0,0,.03)
    color: rgba(0,0,0,.8)
  &.active:hover,
  &.selected.active
    background: rgba(0,0,0,.05)
    color: rgba(0,0,0,.95)
  &.dropBefore
    border-top: 1px solid black
  &.dropAfter
    border-bottom: 1px solid black
  .content.floated.right
    margin-left: 0.5em
  .description.title
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
  .drag-handle
    touch-action: none

.gap-left
  margin-left: 0.5em

.gap-right
  margin-right: 0.5em
